<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/bootstrap-styles') %>
        <link rel="stylesheet" href="/style.css">
        <script src="https://code.jquery.com/jquery-3.7.0.js"
            integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <%- include('../partials/navbar') %>
    </header>
    <div class="container">
        <div class="">
            <div class="container-fliud">
                <div class=" row">
                    <div class="preview col-md-6">

                        <div class="product-images">
                            <div class="main-image">
                                <img onclick="sayHai()" id="main" src="<%= locals.product[0].productImg[0] %>" alt="">
                            </div>
                            <div class="child-images">

                                <% for (let i=1; i< locals.product[0].productImg.length ;i++) { %>
                                    <div class="">
                                        <img id="child<%= i %>" style="width: 100%; height: 100%; object-fit: cover;"
                                            onclick="swap(this.id)" src="<%= locals.product[0].productImg[i] %>" alt="">
                                    </div>
                                    <% } %>
                            </div>
                        </div>

                    </div>
                    <div class="details col-md-6">
                        <div class="">
                            <a href="/products">
                                <div class="d-flex align-items-center back-button-single">
                                    <p><i class="bi bi-arrow-left-short" style="font-size: 2rem;"></i></p>
                                    <p class=" m-0 pb-3" style="font-size: 1.1rem;">Back</p>
                                </div>
                            </a>
                        </div>
                        <h3 class="product-title">
                            <%= locals?.productName %>
                        </h3>
                        <div class="rating">
                            <div class="stars">
                                <% for (let i=0 ; i < 5 ; i++ ) { %>
                                    <% if (i < locals.rating ) { %>
                                        <label style="font-size: 15px;" aria-label="1 star" class="rating__label"
                                            for="rating3-1"><i
                                                class="rating__icon rating__icon--star fa fa-star checked-star"></i></label>
                                        <% } else { %>
                                            <label style="font-size: 15px;" aria-label="1 star" class="rating__label"
                                                for="rating3-1"><i
                                                    class="rating__icon rating__icon--star fa fa-star"></i></label>
                                            <% } %>
                                                <% } %>

                            </div>
                            <span class="review-no"><strong>
                                    <%= locals.totalRating %>
                                </strong> reviews</span>
                        </div>
                        <p class="product-description">
                            <%= locals.product[0].productDescription %>
                        </p>
                        <h3 class="mt-3"> <strong><span class="ind-rs">
                                    <%= locals.product[0].productPrice %>
                                </span></strong></h3>
                        <p class="del ind-rs"><strong class="text-dark">
                                <%= locals.product[0].productPrice + 1000 %>
                            </strong></p>
                        <p class="vote"> you saved ! <strong class="ind-rs">1000</strong></p>
                        <div class="action">
                            <div class="buttons mt-3">
                                <% if (locals.cartAndWish &&
                                    locals?.cartAndWish[0]?.cartIds?.includes(locals.product[0].product_id)) { %>
                                    <a class="default-button py-2" href="/cart">Go to Cart
                                        -></a>
                                    <% } else { %>
                                        <div class="d-inline default-button mx-2 py-2"
                                            onclick="addToCart('<%=  locals.product[0].product_id %>',this)">
                                            Add to cart
                                        </div>
                                        <% } %>

                                            <a class="default-button" href="/buynow/<%= locals.product[0].product_id %>"
                                                style="background-color: #000000; border: 2px solid #002442; color:#002442 ;">Buy
                                                Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/bootstrap-script') %>
        <script src="/scripts/products.js"></script>
        <script src="/scripts/zoom.js"></script>
        <script src="/scripts/zoomsl.js"></script>
        <script defer src="/scripts/add_to.js"></script>
</body>

</html>